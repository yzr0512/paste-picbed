{
  "name": "vscode-paste-picbed",
  "displayName": "Paste picbed",
  "description": "一键将剪贴板图片上传到阿里云图床，并粘贴为 markdown 的链接。",
  "version": "0.0.1",
  "publisher": "nadyu",
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yzr0512/vscode-paste-picbed.git"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./src/extension",
  "contributes": {
    "configuration": [
      {
        "title": "Paste Picbed",
        "properties": {
          "pastePicbed.alioss.accessKeyId": {
            "type": "string",
            "default": "",
            "description": "阿里云 OSS 的 accessKeyId"
          },
          "pastePicbed.alioss.accessKeySecret": {
            "type": "string",
            "default": "",
            "description": "阿里云 OSS 的 accessKeySecret"
          },
          "pastePicbed.alioss.bucket": {
            "type": "string",
            "default": "",
            "description": "阿里云 OSS 的 BucketName"
          },
          "pastePicbed.alioss.region": {
            "type": "string",
            "default": "",
            "description": "阿里云 OSS 的 Endpoint，比如 oss-cn-beijing"
          },
          "pastePicbed.localPath": {
            "type": "string",
            "default": "${folderPath}",
            "description": "图片的本地路径，不含文件名，默认是保存在和 MD 文件同级目录下。路径支持关键字的替换，支持的关键字有：\n${projectPath} 表示当前项目的根目录，${folderPath} 表示当前 MD 文件的目录，\n${year} 表示四位的年份，${month} 表示两位的月份，${day} 表示两位的日期，\n${hour} 表示两位的24小时制的小时，${min} 表示两位的分数，${sec} 表示两位的秒数。"
          },
          "pastePicbed.remotePath": {
            "type": "string",
            "default": "${year}/${month}/${day}",
            "description": "图片在阿里云 OSS 中的路径，不含文件名。路径支持部分关键字的替换，详见 localPath 字段。"
          },
          "pastePicbed.imageName": {
            "type": "string",
            "default": "${year}-${month}-${day}-${hour}${min}${sec}",
            "description": "图片名。"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.pastePicbed",
        "title": "上传剪贴板图片至图床"
      }
    ],
    "keybindings": [
      {
        "command": "extension.pastePicbed",
        "key": "alt+v",
        "mac": "ctrl+v",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "ali-oss": "^6.5.1",
    "moment": "^2.24.0",
    "path": "^0.12.7"
  }
}
